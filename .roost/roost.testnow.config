build:
  type: text
  content: |-
    #!/bin/sh


    docker build -f election-commission/Dockerfile -t election-commission:$GIT_COMMIT_ID election-commission 
    docker tag election-commission:$GIT_COMMIT_ID  election-commission:$ROOST_NAMESPACE  
deploy:
  type: text
  content: |
    #/bin/sh

    BALLOT_ENDPOINT="http://newdemo-on-demand-divyesh-230.ballot.52.8.38.159.nip.io"
    ECSERVER_ENDPOINT="http://newdemo-on-demand-divyesh-230.ecserver.52.8.38.159.nip.io/"

    ECSERVER_ENDPOINT="http://3.108.40.212:31800/"

    echo "ECSERVER_ENDPOINT: ${ECSERVER_ENDPOINT}"

    HELM_OPTS="--set clusterIP=${ROOST_CLUSTER_IP},tag=${ROOST_NAMESPACE},namespace=${ROOST_NAMESPACE},ballot_endpoint=${BALLOT_ENDPOINT},ecserver_endpoint=${ECSERVER_ENDPOINT}"


    helm upgrade testnow-helm-vote-ec helm-vote -n $ROOST_NAMESPACE --create-namespace --install $HELM_OPTS
test:
  - name: ec
    configType: cypress
    configPath: roost-io/election-commission/
